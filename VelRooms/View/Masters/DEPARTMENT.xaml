      xmlns:local="clr-namespace:HMS.View.Masters"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Height="500" Width="800"
      Title="Departemnt" Background="White">
    <Page.Resources>
        <vm:data x:Key="Viewmodel"></vm:data>
