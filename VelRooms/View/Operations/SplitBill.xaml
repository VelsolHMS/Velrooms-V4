                        <TextBox x:Name="amount" MaxLength="10" TabIndex="4" IsEnabled="False" Background="White" material:HintAssist.Hint="Amount" Margin="15,0,0,0" Width="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="35,15,0,0">
