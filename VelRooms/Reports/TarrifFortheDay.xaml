<Page x:Class="HMS.Reports.TarrifFortheDay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
       xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HMS.Reports"
      mc:Ignorable="d" 
      Height="500" Width="850"
      Title="TarrifFortheDay">
    <Grid>
        <Grid>
            <material:Card Height="200" VerticalAlignment="Center" HorizontalAlignment="Center" Width="320" Visibility="Visible">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="29*"/>
                        <RowDefinition Height="163*"/>
                    </Grid.RowDefinitions>
                    <Grid Background="#354766">
                        <TextBlock Text="TarrifPostedFortheDay Report" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Sitka Display" Foreground="#ffffff" FontSize="18" FontWeight="Bold" Margin="0,5,0,0"/>
                        <!--<Button Name="Close"  Margin="368,0,5,0" Height="Auto" BorderBrush="{x:Null}" Click="Close_Click" >
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/cls.png"></ImageBrush>
                            </Button.Background>
                        </Button>-->
                    </Grid>
                    <Grid Grid.Row="1">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <!--<StackPanel Height="25" Margin="0,30,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="From Date:"  Width="120" FontSize="14" FontWeight="Bold" FontFamily="Sitka Small" VerticalAlignment="Bottom"/>
                                    <DatePicker Name="fromdate" Width="180" Margin="20,0,0,0"/>
                                </StackPanel>-->
                            <StackPanel Height="25" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Date:"  Width="75" FontSize="14" FontWeight="Bold" FontFamily="Sitka Small" VerticalAlignment="Bottom"/>
                                <DatePicker Name="todate" Width="180" Margin="20,0,0,0"/>
                            </StackPanel>
                            <Button Width="100" Name="Ok"  Background="#354766" Click="Ok_Click"  Content="OK" Margin="0,30,0,0"  Height="30"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </material:Card>
        </Grid>
    </Grid>
</Page>